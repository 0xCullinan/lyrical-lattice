# Oronym & Lyric Assistant - Environment Variables
# Copy this file to .env and fill in the values

# Database (ENV-001)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/oronym_db

# Redis Cache (ENV-002)
REDIS_URL=redis://localhost:6379/0

# Model Directories (ENV-003, ENV-004, ENV-005)
MODEL_DIR=data/models
CORPUS_DIR=data/corpus
INDEX_DIR=data/indices

# File Upload (ENV-006)
UPLOAD_DIR=/tmp/audio

# Logging (ENV-007)
LOG_LEVEL=INFO

# API Configuration (ENV-008)
API_PORT=8000

# CORS (ENV-009)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate Limiting (ENV-010)
RATE_LIMIT_PER_MINUTE=100

# File Size Limit (ENV-011)
MAX_FILE_SIZE_MB=10

# Cache TTL (ENV-012)
CACHE_TTL_SECONDS=3600

# Search Configuration (ENV-013, ENV-014)
BEAM_WIDTH=10
MAX_PHONEME_SEQUENCE_LENGTH=100

# Genius API for corpus building (ENV-015)
GENIUS_API_KEY=your_genius_api_key_here

# Environment
ENVIRONMENT=development
